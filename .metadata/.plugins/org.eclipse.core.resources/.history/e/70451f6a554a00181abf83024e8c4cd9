package abm.agents;

import java.util.ArrayList;

import abm.helpers.Utils;
import repast.simphony.context.Context;
import repast.simphony.util.ContextUtils;

public class Firm extends NonFinancialAgent {
	
	protected ArrayList<Float> wages ;
	protected int nEmployees ;
	protected float income ;
	
	public Firm(float income, float debt, int nEmployees) {
		super(0,debt);
		this.income = income ;
		this.nEmployees = nEmployees ;
	}

	public ArrayList<Float> getWages() {
		return wages;
	}

	public void setWages(ArrayList<Float> wages) {
		this.wages = wages;
	}

	public int getNEmployees() {
		return nEmployees;
	}

	public void setNEmployees(int nEmployees) {
		this.nEmployees = nEmployees;
	}
	
	public float getIncome() {
		return income;
	}

	public void setIncome(float income) {
		this.income = income;
	}
	
	public Context getContext() {
		return ContextUtils.getContext(this);
	}
	
	public void planProduction() { }

	@Override
	public String toString() {
		
		String strAgent = super.toString() ;
		
		Integer nEmps = this.nEmployees;
		Float income = this.income ;

		String[][] fields = { { "Number of Employees", nEmps.toString()}, 
							{"Income", income.toString()} } ;
		
	    return strAgent + Utils.getAgentDescriptor(fields, false) ;
	}
}
