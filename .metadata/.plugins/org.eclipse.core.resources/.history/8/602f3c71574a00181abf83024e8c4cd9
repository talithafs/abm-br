package abm.agents;

import java.util.TreeSet;

import abm.helpers.Utils;

public class CapitalGoodsFirm extends Firm {
	
	private TreeSet<NewMachine> catalog ;
	
	public CapitalGoodsFirm(float income, float debt, int nEmployees) {
		super(income, debt, nEmployees);
		this.catalog = new TreeSet<NewMachine>();
	}
	
	@Override
	public void planProduction() {
		System.out.println("This is a capital goods firm, id " + super.getId());
	}

	public TreeSet<NewMachine> getCatalog() {
		return catalog;
	}

	public void setCatalog(TreeSet<NewMachine> catalog) {
		this.catalog = catalog;
	}
	
	public void addMachine(NewMachine machine) {
		catalog.add(machine);
	}
	
	@Override 
	public String toString() {
		
		String strAgent = super.toString() ;
		Integer nMacs = this.catalog.size() ;
		String[][] fields = { { "Number of Machines", nMacs.toString()} } ;
		
	    return strAgent + Utils.getAgentDescriptor(fields, false) ;
	}


}
